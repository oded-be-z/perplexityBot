# FinanceBot Pro - Environment Configuration
# Copy this file to .env and fill in your values

# ===== REQUIRED =====
# Perplexity AI API Key (Get from: https://www.perplexity.ai/settings/api)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ===== APPLICATION =====
# Environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=3000

# ===== SECURITY =====
# Allowed origins for CORS (comma-separated for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session secret for enhanced security (generate a random string)
SESSION_SECRET=your_very_long_random_session_secret_here

# ===== RATE LIMITING =====
# Chat requests per 15 minutes per IP
CHAT_RATE_LIMIT=50

# Upload requests per hour per IP
UPLOAD_RATE_LIMIT=10

# ===== CACHE =====
# Cache TTL in milliseconds (default: 5 minutes)
CACHE_TTL=300000

# ===== MONITORING =====
# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Enable error reporting to external service
ENABLE_ERROR_REPORTING=false

# Sentry DSN (if using Sentry for error reporting)
SENTRY_DSN=

# ===== PERFORMANCE =====
# Maximum file upload size in MB
MAX_FILE_SIZE=2

# Maximum number of holdings per portfolio
MAX_HOLDINGS=1000

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000